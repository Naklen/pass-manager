<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
             x:Class="pm.Views.NewEntryView">
	<StackPanel>
		<TextBox Text="{Binding	Name}" Watermark="Name"></TextBox>
		<TextBox Text="{Binding	Pass}" Watermark="Password"></TextBox>
		<TextBox Text="{Binding	Login}" Watermark="Login"></TextBox>
		<StackPanel Orientation="Horizontal">
			<Button Command="{Binding Add}">Add</Button>
			<Button Command="{Binding Cancel}">Cancel</Button>
		</StackPanel>
	</StackPanel>
</UserControl>
